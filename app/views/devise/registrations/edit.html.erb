<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>



  <div><%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true %></div>

  <div><%= f.check_box :is_female, {}, true %> <%= f.label :is_female, "Female" %> </div>
  <div><%= f.check_box :is_female, {}, false %> <%= f.label :is_female, "Male" %> </div>

  <div><%= f.label :date_of_birth %><br />
  <%= f.date_select :date_of_birth %></div>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(Dejar en blanco si no quieres realizar cambios)</i><br/>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(necesitamos de tu contraseña actual para confirmar los campos)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Borrar mi cuenta</h3>

<p>¿Inconforme? <%= button_to "Borrar cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro de que deseas realizar estos cambios?" }, method: :delete %></p>

<%= link_to "Atrás", :back %>
